@model List<E_Commerce.Models.tblProduct>

<table id="tableProduct" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
    <thead>
        <tr>
            <th>CategoryID</th>
            <th>SubCategoryID</th>
            <th>Product Name</th>
            <th>ColorID</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Status</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.SubCategoryID</td>
            <td>@item.ProductName</td>
            <td>@item.ColorID</td>
            <td>@item.Quantity</td>
            <td>@item.Price</td>
            <td>@item.Status</td>
            <td><img src="@item.Image" width="100" height="100" /></td>
            <td><button class="btn btn-outline-primary" onclick="Edit(@item.ProdutID)" type="button">Edit</button> | | <button class="btn btn-outline-danger" onclick="Delete(@item.ProdutID,'@item.Image')" type="button">Delete</button></td>
            </tr>
        }
    </tbody>
</table>
