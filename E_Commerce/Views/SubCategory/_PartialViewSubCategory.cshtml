@model List<E_Commerce.Models.tblSubCategory>

<table id="tableSubCategory" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
    <thead>
        <tr>
            <th>CategoryID</th>
            <th>SubCategory Name</th>
            <th>Status</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
       @foreach(var item in Model)
        {
            <tr>
                 <td>@item.CategoryID</td>
                 <td>@item.SubCategoryName</td>
                 <td>@item.Status</td>
                 <td><img src="@item.Image" width="100" height="100" /></td>

                 <td><button class="btn btn-outline-primary" onclick="Edit(@item.SubCategoryID)" type="button">Edit</button> | | <button class="btn btn-outline-danger"  onclick ="Delete(@item.SubCategoryID,'@item.Image' )" type="button">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>