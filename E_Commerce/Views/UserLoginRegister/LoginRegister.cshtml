@model E_Commerce.Models.UserRegisterModel
@{
    ViewBag.Title = "LoginRegister";
    Layout = "~/Views/Shared/User_Layout.cshtml";
}


<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="/Content/user assets/images/breadcrumb/bg/1-1-1920x373.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Product Related</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home <i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>Register</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 pt-10 pt-lg-0">
                    <form id="SaveRegister" action="#"  method="post" enctype="multipart/form-data">
                        <div class="login-form">
                            <h4 class="login-title">Register</h4>
                            <div class="row">
                                <div class="form-control">
                                    <label>First Name</label>
                                    @Html.TextBoxFor(a => a.FirstName, new { @class = "form-control", Placeholder = "First Name" });

                                    <label>Last Name</label>
                                    @Html.TextBoxFor(a => a.LastName, new { @class = "form-control", Placeholder = "First Name" });

                                    <label>Email Address*</label>
                                    @Html.TextBoxFor(a => a.Email, new { @class = "form-control", Type = "Email", Placeholder = "Email" });

                                    <label>Password</label>
                                    @Html.TextBoxFor(a => a.Password, new { @class = "form-control", Type = "password", Placeholder = "Password" });

                                    <label>Confirm Password</label>
                                    @Html.TextBoxFor(a => a.ConformPassword, new { @class = "form-control", Type = "Password", Placeholder = "Conform Password" });

                                    <button id="UserLoginRegister" class="btn btn-custom-size lg-size btn-secondary btn-primary-hover rounded-0">Register</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>


@section script{
    <script>
        $(document).ready(function () {
            $(".dropify").dropify();
            SubCategoryList();
        });


        $('#UserLoginRegister').click(function (event) {
                event.preventDefault();
                var formData = new FormData(document.getElementById("SaveRegister"));
                $.ajax({
                    url: '@Url.Action("Save", "UserLoginRegister")',
                    data: formData,
                    dataType: 'json',
                    contentType: false,
                    processData: false,
                    type: 'POST',
                    success: function (res) {
                        if (res == 1) {
                            alert("Data Saved");
                        }
                        else {
                            alert("something went wrong");
                        }
                    }
                });
                return false;
           });
    </script>
}





